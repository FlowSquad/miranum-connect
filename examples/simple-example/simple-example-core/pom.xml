<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <artifactId>simple-example-core</artifactId>
    <name>example-core</name>
    <modelVersion>4.0.0</modelVersion>
    <packaging>jar</packaging>

    <parent>
        <groupId>io.miragon.miranum</groupId>
        <artifactId>simple-example</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>

    <dependencies>
        <!--Miranum-->
        <dependency>
            <groupId>io.miragon.miranum</groupId>
            <artifactId>worker-api</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>io.miragon.miranum</groupId>
            <artifactId>message-api</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
        </dependency>
        <dependency>
            <groupId>io.miragon.miranum</groupId>
            <artifactId>element-template-api</artifactId>
            <version>0.1.0-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>io.miragon.miranum</groupId>
                <artifactId>element-templates-generator-maven-plugin</artifactId>
                <version>0.1.0-SNAPSHOT</version>

                <configuration>
                    <targetPlatforms>camunda7</targetPlatforms>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>